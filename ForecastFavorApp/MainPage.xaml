<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:ForecastFavorApp"
            x:Class="ForecastFavorApp.MainPage">

     <!-- Tab 1: Today -->
    <ContentPage Title="Today">
        <StackLayout>
        <Label Text="Today's Weather" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

    <!-- Tab 2: Tomorrow -->
    <ContentPage Title="Tomorrow">
        <StackLayout>
         <Label Text="Tomorrow's Weather" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

    <!-- Tab 3: 3 Days -->
    <ContentPage Title="3 Days">
        <StackLayout>
        <Label Text="Weather for the Next 3 Days" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

</TabbedPage>