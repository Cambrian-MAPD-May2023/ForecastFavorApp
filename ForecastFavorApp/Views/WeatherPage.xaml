            <Label HorizontalOptions="Center" FontSize="25" TextColor="Black" FontAttributes="Bold" Text="{Binding WeatherDescription}"/>
            <Label HorizontalOptions="Center" FontSize="40" TextColor="Black" Text="{Binding Temperature}"/>
